<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cvChild"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/colorNewStyle"
    android:backgroundTintMode="add"
    android:elevation="5dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="@color/colorText"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/test_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivChild"

            android:layout_width="60dp"


            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="5dp"
            card_view:srcCompat="@drawable/kid2" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:paddingTop="7dp"

            android:layout_marginLeft="33dp"
            android:layout_toRightOf="@+id/ivChild"


            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="28dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:paddingBottom="7dp"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvName"
            android:layout_alignBottom="@+id/tvBalance"
            android:text="Inactive"
            android:textColor="@color/colorInactiveStatus"
            android:textStyle="bold"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

